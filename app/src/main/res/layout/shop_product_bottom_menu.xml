<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:background="@color/dark_grey2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/favorite"
            android:layout_marginLeft="@dimen/dp20"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_favorite_normal"
                android:layout_gravity="center"
                android:id="@+id/product_favorite"
                android:layout_marginTop="@dimen/dp5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="@dimen/sp10"
                android:layout_marginTop="@dimen/dp3"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp5"
                android:id="@+id/favorite_tv"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/shop_cart"
            android:layout_marginLeft="@dimen/dp20"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <include layout="@layout/shop_cart_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="购物车"
                android:layout_marginTop="@dimen/dp3"
                android:layout_marginBottom="@dimen/dp5"
                android:textSize="@dimen/sp10"
                />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="@string/addCart"
        android:background="@color/white"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:id="@+id/addCart"
        />

</LinearLayout>
