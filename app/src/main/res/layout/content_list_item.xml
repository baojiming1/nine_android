<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tp.venus.widget.MyRollPagerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mRollPagerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rollviewpager_hint_gravity="right"
        android:background="@drawable/default_placeholder"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp10"
        android:background="@drawable/home_bottom_gradient_bg"
        android:layout_alignBottom="@id/mRollPagerView"
        android:layout_height="wrap_content">

        <com.tp.venus.widget.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/want"
            android:paddingLeft="@dimen/dp15"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingRight="@dimen/dp15"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp10"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:id="@+id/buy"
            android:background="@drawable/home_buy_button_shape"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            >

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parised_nor"
                android:id="@+id/parise"
                />


            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/favorite_nor"
                android:layout_marginLeft="@dimen/dp15"
                android:id="@+id/favorite_image"
                />



            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/more"
                android:layout_marginLeft="@dimen/dp20"
                android:id="@+id/more"
                />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
