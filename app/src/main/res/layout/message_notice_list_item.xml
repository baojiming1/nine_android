<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:layout_height="wrap_content">


        <include layout="@layout/common_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/message_comment_icon"
            android:layout_gravity="center"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/sp15"
                android:id="@+id/nickname"
                android:textColor="@color/bigFont"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:layout_height="wrap_content"
                android:text="2016-04-17 09:30"
                android:textColor="@color/smallFont"
                android:id="@+id/time"
                android:layout_below="@id/nickname"
                />

            <ImageView
                android:id="@+id/message_content_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        >
        
        <Space
            android:layout_width="@dimen/dp70"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg_shape"
            android:textSize="@dimen/sp12"
            android:gravity="center"
            android:padding="@dimen/dp3"
            android:id="@+id/message"
            android:text=""
            />

    </LinearLayout>







</LinearLayout>