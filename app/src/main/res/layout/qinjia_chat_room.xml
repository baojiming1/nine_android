<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_chat">

            <com.tp.venus.module.qinjia.view.ChatBubble
                android:id="@+id/chatRoom"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"></com.tp.venus.module.qinjia.view.ChatBubble>
        </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_chat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="40dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/corners_bg"
                        android:hint="输入文字开始聊天"
                        android:paddingLeft="@dimen/dp10"
                        android:textColor="#FFFFFF"></EditText>

                    <ImageView
                        android:id="@+id/iv_face"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:visibility="gone"
                        android:src="@drawable/iv_face" />
                </RelativeLayout>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/corners_bg"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="#ffffff" />
            </LinearLayout>


        </LinearLayout>
        <include
            android:id="@+id/chat_face_container"
            layout="@layout/qinjia_chat_face_container"
            android:visibility="gone"
            />
    </LinearLayout>

</RelativeLayout>