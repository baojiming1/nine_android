<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:padding="@dimen/dp10"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_user_icon"
        android:id="@+id/menu_icon"
        />

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp10"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp5"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/menu_title"
                android:textSize="@dimen/sp14"
                android:textColor="@color/bigFont"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone"
                android:id="@+id/menu_subtitle"
                android:textSize="@dimen/sp10"
                android:textColor="@color/smallFont"
                android:layout_below="@id/menu_title"
                android:layout_alignLeft="@id/menu_title"
                />

            <!--       android:background="@drawable/tv_bg_shape_nor"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:background="@drawable/tv_bg_shape_nor"
                android:visibility="gone"
                android:textSize="@dimen/sp10"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/dp3"
                android:paddingTop="@dimen/dp3"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:id="@+id/right_title"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp30"
                />

         <!--   <ViewStub
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightT"
                android:layout_marginRight="@dimen/dp30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/menu_forward"
                android:layout_marginRight="@dimen/dp10"
                />

            <ViewStub
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/rightView"
                android:layout_marginRight="@dimen/dp5"
                android:layout_toLeftOf="@id/menu_forward"
                />



        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/menu_liner"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/grey"/>

    </LinearLayout>









</LinearLayout>